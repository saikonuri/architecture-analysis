<p id="notice"><%= notice %></p>

<h2>University Details</h2>
<br/>

<p align="center">
  <strong>Name:</strong>
  <br/>
  <%= @university.name %>
</p>

<br/>
<p align="center">
  <strong>Location:</strong>
  <br/>
  <%= @university.location %>
</p>

<br/>
<br/>

<h5>Departments</h5>
<br/>

<table align="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Abbreviation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td>Department Name</td>
        <td><%= department.abbreviation %></td>
        <td><%= link_to 'Details', department %></td>
        <% if false %>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', departments, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if false %>
<%= link_to 'Edit', edit_university_path(@university) %>
<%  end %>
<%= link_to 'Back', universities_path %>
