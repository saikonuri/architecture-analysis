<h1>Courses Textbooks</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Textbook</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses_textbooks.each do |courses_textbook| %>
      <tr>
        <td><%= courses_textbook.course_id %></td>
        <td><%= courses_textbook.textbook_id %></td>
