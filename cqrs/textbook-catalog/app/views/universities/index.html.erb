<p id="notice"><%= notice %></p>

<h1>Universities</h1>
<br/>

<%= form_tag(universities_path, :method => "get", id: "search-form") do %>
  <div class="form-group", id="search-bar">
  <%= text_field_tag :search, params[:search], placeholder: "Search ", class: "form-control" %>
  <br/>
  <%= submit_tag "Search", class: "btn btn-primary", id: "search-button" %>
  </div>
<% end %>

<br/>

<table align="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= university.name %></td>
        <td><%= university.location %></td>
        <td><%= link_to 'Details', university, id: university.id %></td>
        <% if false %>
        <td><%= link_to 'Edit', edit_university_path(university) %></td>
        <td><%= link_to 'Destroy', university, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New University', new_university_path %>
